{
    "compilerOptions": {
      "types": ["node"],
      "typeRoots": ["./node_modules/@types"],
      "lib": ["es2015"],
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  